<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="all-products">
  <thead>
    <tr>
      <th width="20%">Name</th>
      <th width="60%">Description</th>
      <th width="10%">Price</th>
      <th width="10%">Options</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class= "product" product="<%= product.id %>">
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.formatted_price %></td>
        <td><%= link_to 'Show', product, class: "show-product" %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>.
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to 'New Product', new_product_path, class: "new-product" %>
<% else %>
  <p>Must be logged-in to Add, Edit or Delete items.</p>
<% end %>
