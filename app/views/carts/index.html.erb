<br><br>

<table class="all-products">
<thead>
	<tr>
		<th width="15%">Name</th>
		<th width="35%">Description</th>
		<th width="10%">Price</th>
		<th width="10%">Category</th>
		<th width="10%">Quantity</th>
		<th width="20%">Remove</th>
		<th colspan="3"></th>
	</tr>
</thead>

<tbody>
	<% @cart.products.each do |item| %>
<tr>
	<td><%= item.name %></td>
	<td><%= item.description %></td>
	<td><%= item.formatted_price %>
	<td><%= item.category %></td>
	<td>1</td>
	<td><%= link_to 'Remove', @cart.remove(item) , method: :delete, data: { confirm: "Are you sure you want to delete this item?" } %></td>
</tr>
	<% end %>
</tbody>
</table>

